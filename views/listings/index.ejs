            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Resort</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-seedling"></i></div>
            <p>Nature</p>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md2 row-cols-sm-1">
        <% for (const listing of allListings) {%>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listingCard">
                    <img src=<%=listing.image.url %> class="card-img-top" alt="Some Image" style="height: 20rem;" >
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b>
                                <%= listing.title %>
                            </b></p>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                    </div>
                </div>
            </a>
            <% } %>
    </div>