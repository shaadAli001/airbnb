<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h2 class="title">Create New Listing</h2>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data"
                     class="needs-validation"
                    novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" value="<%= listing.title %>" name="listing[title]" id="title"
                            placeholder="Enter your title" class="form-control">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                please enter title!
                            </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" name="listing[description]" id="description" rows="5" cols="15"
                            placeholder="Enter your description"
                            class="form-control"><%= listing.description %></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                please enter Description!
                            </div>
                    </div>
                    
                    <div class="mb-2 mt-2">
                        <h6>Current Image</h6>
                        <img src="<%= listing.image.url %>" alt="Current Image" style="height: 100px;">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="image" name="listing[image.url]">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Image link!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="<%= listing.price %>" id="price"
                            placeholder="Enter your price" class="form-control">
                                  <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            please enter Price!
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-6">
                            <label for="location" class="form-label">location</label>
                            <input type="text" name="listing[location]" id="location" value="<%= listing.location %>"
                                placeholder="Enter your location" class="form-control">
                                      <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            please enter Location!
                        </div>
                        </div>

                        <div class="mb-3 col-6">
                            <label for="country" class="form-label">country</label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>" id="location"
                                placeholder="Enter your country" class="form-control">
                                      <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            please enter Country!
                        </div>
                        </div>
                    </div>

                    <button class="btn btn-add">Submit</button>
                </form>

            </div>
        </div>
    </body>
